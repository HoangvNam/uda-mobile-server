<div class="container mt-5">
    <div class="text-center mb-5">
        <h1>{{title}}</h1>
        <p class="text-muted">Welcome to the admin panel. Use the options below to manage the system.</p>
    </div>

    <div class="row g-4">
        <!-- Users Management -->
        <div class="col-md-4">
            <div class="card text-bg-light border-primary shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage all registered users.</p>
                    <a href="/users" class="btn btn-primary mt-3">Manage Users</a>
                </div>
            </div>
        </div>
        <!-- Songs Management -->
        <div class="col-md-4">
            <div class="card text-bg-light border-success shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <h5 class="card-title">Songs</h5>
                    <p class="card-text">Manage the song collection.</p>
                    <a href="/songs" class="btn btn-success mt-3">Manage Songs</a>
                </div>
            </div>
        </div>
        <!-- Singers Management -->
        <div class="col-md-4">
            <div class="card text-bg-light border-warning shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <h5 class="card-title">Singers</h5>
                    <p class="card-text">Manage all singers in the system.</p>
                    <a href="/singers" class="btn btn-warning mt-3">Manage Singers</a>
                </div>
            </div>
        </div>
    </div>
</div>
