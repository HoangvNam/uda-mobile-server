<div class="container mt-5">
    <h3 class="text-center mb-4">Edit User</h3>
    <form action="/edit-user/{{user._id}}" method="POST" class="border p-4 rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="username" class="form-label">Email (Username):</label>
            <input type="email" id="username" name="username" value="{{user.username}}" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" value="{{user.password}}" required class="form-control">
        </div>

        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </form>
</div>