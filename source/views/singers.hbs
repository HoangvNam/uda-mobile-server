<div class="container mt-5">
    <h3 class="text-center mb-4 singer-list-title">Singers</h3>
    <ul class="list-group task-list">
        {{#each singers}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong>{{this.name}}</strong> - Songs: {{this.numberSongs}} <br>
                Avatar: <a href="{{this.avatar}}" target="_blank">View</a>
            </div>
            <div class="d-flex">
                <a href="/edit-singer/{{this._id}}" class="btn btn-warning btn-sm me-2">Edit</a>
                <form action="/delete-singer/{{this._id}}" method="POST" class="delete-form">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </li>
        {{else}}
        <li class="list-group-item text-center">There are no singers yet.</li>
        {{/each}}
    </ul>
</div>