<div class="container mt-5">
    <h3 class="text-center mb-4">Users</h3>
    <ul class="list-group user-list">
        {{#each users}}
        <li class="list-group-item">
            <div>
                <strong>Email:</strong> {{this.username}} <br>
                <strong>ID:</strong> {{this._id}} <br>
                <strong>Favorites:</strong>
                <ul>
                    {{#if this.favorites.length}}
                        {{#each this.favorites}}
                        <li>
                            {{this.name}} - {{this.singer}}
                        </li>
                        {{/each}}
                    {{else}}
                    <li>No favorites yet.</li>
                    {{/if}}
                </ul>
            </div>
            <div class="d-flex mt-2">
                <a href="/edit-user/{{this._id}}" class="btn btn-warning btn-sm me-2">Edit</a>
                <form action="/delete-user/{{this._id}}" method="POST" class="delete-form">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </li>
        {{else}}
        <li class="list-group-item text-center">No users available.</li>
        {{/each}}
    </ul>
</div>
